<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.4"
        android:orientation="vertical">

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.8"
        android:background="#A9E2F3"
        android:orientation="vertical">
        <ImageButton
            	android:id="@+id/imageButton1"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:background="#A9E2F3"
            	android:src="@drawable/abc_ic_clear_search_api_disabled_holo_light" />
    </LinearLayout>

    <TableLayout
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_weight="0.6"
    	android:shrinkColumns="*" 
    	android:stretchColumns="*" 
    	android:background="#A9E2F3"
    	android:orientation="vertical"> 
    	
    	<TableRow 
        	android:layout_height="wrap_content" 
        	android:layout_width="fill_parent" 
        	android:gravity="center_horizontal">
        	<TextView
            android:id="@+id/matchGroup"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="A조 조별매치" />
   		</TableRow>
   		
   		<TableRow 
        	android:layout_height="wrap_content" 
        	android:layout_width="fill_parent" 
        	android:gravity="center_horizontal">
        	<ImageView
            android:id="@+id/flagA"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:src="@drawable/flag1" />
        	<TextView
            android:id="@+id/vsText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="vs" />
        	<ImageView
            android:id="@+id/flagB"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:src="@drawable/flag2" />
   		</TableRow>
   		
   		<TableRow 
        	android:layout_height="wrap_content" 
        	android:layout_width="fill_parent" 
        	android:gravity="center_horizontal">
        	<TextView
            android:id="@+id/nationA"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="잉글랜드" />
        	<TextView
            android:id="@+id/matchDate"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="06.18 07:00" />
        	<TextView
            android:id="@+id/nationB"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="보스니아\n 헤르체고비나" />
   		</TableRow>  
   		
		<TableRow 
        	android:layout_height="wrap_content" 
        	android:layout_width="fill_parent"
        	android:gravity="center_horizontal">
        	<Button
            	android:id="@+id/btnPredict1"
            	android:layout_width="fill_parent"
            	android:layout_height="fill_parent"
            	android:padding="10dip"
            	android:gravity="center"
            	android:text="A팀 승리" />
        	<Button
            	android:id="@+id/btnPredict2"
            	android:layout_width="fill_parent"
            	android:layout_height="fill_parent"
            	android:padding="10dip"
            	android:gravity="center"
            	android:text="무승부" />
        	<Button
            	android:id="@+id/btnPredict3"
            	android:layout_width="fill_parent"
           	 	android:layout_height="fill_parent"
            	android:padding="10dip"
            	android:gravity="center"
            	android:text="B팀 승리" />
		</TableRow>  
    </TableLayout>

</LinearLayout>